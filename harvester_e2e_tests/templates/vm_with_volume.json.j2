{# Template for basic VM creation request. Start the VM instance upon #}
{# creation. #}

{% if name is not defined %}
    {% set name = random_name() %}
{% endif %}
{% set disk_0_name = name ~ "-disk-0-" ~ random_alphanumeric(length=5) %}
{% if image_storage_class is not defined %}
    {% set image_storage_class = "longhorn" ~ image_name %}
{% endif %}

{
    "apiVersion": "kubevirt.io/v1",
    "kind": "VirtualMachine",
    "metadata": {
        "annotations": {
            "field.cattle.io/description": "{{ description | default('') }}"
        },
        "name": "{{ name }}",
        "namespace": "{{ vm_namespace | default('default') }}"
    },
    "spec": {
        "dataVolumeTemplates": [
            {
                "apiVersion": "cdi.kubevirt.io/v1beta1",
                "kind": "DataVolume",
                "metadata": {
                    "annotations": {
                        "harvesterhci.io/imageId": "{{ image_namespace | default('default') }}/{{ image_name }}"
                    },
                    "name": "{{ disk_0_name }}"
                },
                "spec": {
                    "pvc": {
                        "accessModes": [
                            "ReadWriteMany"
                        ],
                        "resources": {
                            "requests": {
                                "storage": "{{ disk_size_gb | default(10) }}Gi"
                            }
                        },
                        "storageClassName": "{{ image_storage_class }}",
                        "volumeMode": "Block"
                    },
                    "source": {
                        "blank": {}
                    }
                }
            }
        ],
        "running": true,
        "template": {
            "metadata": {
                "labels": {
                    "harvesterhci.io/vmName": "{{ name }}"
                }
            },
            "spec": {
                "domain": {
                    "cpu": {
                        "cores": {{ cpu | default(1) }},
                        "sockets": 1,
                        "threads": 1
                    },
                    "devices": {
                        "disks": [
                            {
                                "disk": {
                                    "bus": "virtio"
                                },
                                "name": "disk-0"
                            },
                            {
                                "disk": {
                                    "bus": "virtio"
                                },
                                "name": "disk-1"
{% if network_data is defined and network_data is not none or user_data is defined and user_data is not none and ssh_public_key is defined and ssh_public_key is not none %}
                            },
                            {
                                "disk": {
                                    "bus": "virtio"
                                },
                                "name": "cloudinitdisk"
{% endif %}
                            }
                        ],
                        "inputs": [
                            {
                                "bus": "usb",
                                "name": "tablet",
                                "type": "tablet"
                            }
                        ],
                        "interfaces": [
                            {
                                "masquerade": {},
                                "model": "virtio",
                                "name": "default"
                            }
                        ]
                    },
                    "machine": {
                        "type": ""
                    },
                    "resources": {
                        "requests": {
                            "memory": "{{ memory_gb | default(1) }}Gi"
                        }
                    }
                },
                "evictionStrategy": "LiveMigrate",
                "hostname": "{{ hostname | default(name) }}",
                "networks": [
                    {
                        "name": "default",
                        "pod": {}
                    }
                ],
                "volumes": [
                    {
                        "dataVolume": {
                            "name": "{{ disk_0_name }}"
                        },
                        "name": "disk-0"
                    },
                    {
                        "dataVolume": {
                            "name": "{{ volume_name }}"
                        },
                        "name": "disk-1"
{% if network_data is defined and network_data is not none or user_data is defined and user_data is not none and ssh_public_key is defined and ssh_public_key is not none %}
                    },
                    {
                        "cloudInitNoCloud": {
{% if network_data is defined and network_data is not none %}
                            "networkData": "{{ network_data }}",
{% endif %}
{% if user_data is defined and user_data is not none %}
                            "userData": "{{ user_data }}"
{% else %}
                            "userData": "#cloud-config\\nssh_authorized_keys:\\n  - >-\\n    {{ ssh_public_key }}\\n"
{% endif %}
                        },
                        "name": "cloudinitdisk"
{% endif %}
                    }
                ]
            }
        }
    }
}
